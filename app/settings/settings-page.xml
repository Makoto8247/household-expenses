<Page
    navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <NavigationButton visibility="hidden"></NavigationButton>
        <GridLayout columns="50, *">
            <Label class="action-bar-title" text="Settings" colSpan="2"/>
            <Label class="fas" text="&#xf0c9;" tap="onDrawerButtonTap"/>
        </GridLayout>
    </ActionBar>

    <GridLayout class="page__content">
        <StackLayout padding="16">
            <Label text="設定メニュー" class="h2" marginBottom="16" />
            
            <!-- カテゴリ設定への遷移 -->
            <GridLayout 
                columns="auto, *"
                tap="{{ navigateToCategories }}"
                class="btn-primary"
                marginBottom="12"
                padding="12">
                <Label col="0" text="&#xf07b;" class="nt-icon fas" />
                <Label col="1" text="カテゴリ設定" class="p-l-10" />
            </GridLayout>
            
            <!-- 他の設定項目 -->
            <GridLayout 
                columns="auto, *"
                class="btn-secondary"
                marginBottom="12"
                padding="12">
                <Label col="0" text="&#xf019;" class="nt-icon fas" />
                <Label col="1" text="データのバックアップ" class="p-l-10" />
            </GridLayout>
                
            <GridLayout 
                columns="auto, *"
                class="btn-secondary"
                marginBottom="12"
                padding="12">
                <Label col="0" text="&#xf093;" class="nt-icon fas" />
                <Label col="1" text="データの復元" class="p-l-10" />
            </GridLayout>
        </StackLayout>
    </GridLayout>
</Page>
