<Page
    navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <NavigationButton visibility="hidden"></NavigationButton>
        <GridLayout columns="50, *">
            <Label class="action-bar-title" text="Settings" colSpan="2"/>
            <Label class="fas" text="&#xf0c9;" tap="onDrawerButtonTap"/>
        </GridLayout>
    </ActionBar>

    <ScrollView class="page__content">
        <StackLayout padding="20">
            <Label text="設定メニュー" class="h2" marginBottom="24" textAlignment="center" />
            
            <!-- カテゴリ設定への遷移 -->
            <StackLayout 
                tap="{{ navigateToCategories }}"
                class="list-group-item"
                marginBottom="16"
                padding="16"
                backgroundColor="#f8f9fa"
                borderRadius="8">
                <StackLayout orientation="horizontal">
                    <Label text="&#xf07b;" class="fas text-primary" fontSize="20" verticalAlignment="center" />
                    <Label text="カテゴリ設定" class="h3" marginLeft="16" verticalAlignment="center" />
                </StackLayout>
                <Label text="支出カテゴリの追加・編集・削除" class="text-muted" fontSize="14" marginTop="4" />
            </StackLayout>
            
            <!-- データのバックアップ -->
            <StackLayout 
                class="list-group-item"
                marginBottom="16"
                padding="16"
                backgroundColor="#f8f9fa"
                borderRadius="8">
                <StackLayout orientation="horizontal">
                    <Label text="&#xf019;" class="fas text-success" fontSize="20" verticalAlignment="center" />
                    <Label text="データのバックアップ" class="h3" marginLeft="16" verticalAlignment="center" />
                </StackLayout>
                <Label text="データをエクスポートして保存" class="text-muted" fontSize="14" marginTop="4" />
            </StackLayout>
                
            <!-- データの復元 -->
            <StackLayout 
                class="list-group-item"
                marginBottom="16"
                padding="16"
                backgroundColor="#f8f9fa"
                borderRadius="8">
                <StackLayout orientation="horizontal">
                    <Label text="&#xf093;" class="fas text-info" fontSize="20" verticalAlignment="center" />
                    <Label text="データの復元" class="h3" marginLeft="16" verticalAlignment="center" />
                </StackLayout>
                <Label text="バックアップデータからデータを復元" class="text-muted" fontSize="14" marginTop="4" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</Page>
